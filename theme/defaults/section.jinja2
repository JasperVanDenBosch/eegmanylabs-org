<sl-card id="{{ section.name }}">
  
  <div slot="header">
    {{ section.front['Title'] }}
  </div>

  <img
    slot="image"
    src="/assets/images/{{ section.front['Image'] }}"
  />

  {{ section.content_html|safe }}

  {% for tag in section.front['Tags'] %}
    <sl-tag size="medium" pill>{{ tag }}</sl-tag>
  {% endfor %}

  {# should move this to people-specific template  #}
  {% if section.front['ScholarUrl']|length > 5 %}
    <sl-tooltip content="Google Scholar profile">
        <sl-icon-button library="fa" name="fab-google-scholar" href="{{ section.front['ScholarUrl'] }}" target="_blank"></sl-icon-button>
    </sl-tooltip>
  {% endif %}
  {% if section.front['UniUrl']|length > 5 %}
    <sl-tooltip content="University profile page">
        <sl-icon-button library="fa" name="fas-building-columns" href="{{ section.front['UniUrl'] }}" target="_blank"></sl-icon-button>
    </sl-tooltip>
  {% endif %}
  {% if section.front['LabUrl']|length > 5 %}
    <sl-tooltip content="Lab website">
        <sl-icon-button library="fa" name="fas-flask" href="{{ section.front['LabUrl'] }}" target="_blank"></sl-icon-button>
    </sl-tooltip>
  {% endif %}
</sl-card>
