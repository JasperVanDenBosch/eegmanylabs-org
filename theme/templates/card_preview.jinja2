
<sl-card id="{{ leaf.name }}" class="preview" style="display:none">
  
    <h3>{{ leaf.front['Title'] }}</h3>

    {% if 'Image' in leaf.front %}

        <img
            slot="image"
            src="/assets/images/{{ leaf.front['Image'] }}"
            loading="lazy"
        />

    {% else %}

        {{ leaf.content_html|safe }}

  {% endif %}

</sl-card>
